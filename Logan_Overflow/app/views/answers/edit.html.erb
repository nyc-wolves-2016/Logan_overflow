<h1>Editing Answer:</h1>

<%= form_for :answer, url: post_answer_path(@post, @answer), method: :patch do |f| %>
  <% if @answer %>
    <% if @answer.errors.any? %>
      <div class="container-errors">
        <h2>
          <%= pluralize(@answer.errors.count, "error") %> prohibited this article from being saved:
        </h2>
        <ul class="list-errors">
          <% @answer.errors.full_messages.each do |msg| %>
            <li class="list-item-error"> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit :edit %>
  </p>
<% end %>

