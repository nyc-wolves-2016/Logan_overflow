<!DOCTYPE html>
<html>
  <head>
    <title>LoganOverflow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class=nav-'main'>
      <ul class="list-nav">
        <%if current_user %>
        <li class="list-item-nav"> <%= link_to "#{current_user.username}", session_path(current_user) %> </li>
        <li class="list-item-nav"> <%= link_to 'Logout', '/logout' %> </li>
        <% else %>
        <li class="list-item-nav"> <%= link_to 'Register', '/register' %> </li>
        <li class="list-item-nav"> <%= link_to 'Login', '/login' %> </li>
        <% end %>
        <li class="list-item-nav"> <%= link_to 'Home', posts_path %> </li>
    <%= yield %>
  </body>
</html>
