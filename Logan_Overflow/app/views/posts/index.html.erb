<h1>Posts</h1>
<div class="container-posts">
  <table>
    <tr>
      <th>Question</th>
      <th colspan="2"></th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
            <td><%= link_to "#{post.title}", post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post)%></td>
        </tr>
    <% end %>
  </table>
</div>
<%= link_to 'New Post', new_post_path %>
