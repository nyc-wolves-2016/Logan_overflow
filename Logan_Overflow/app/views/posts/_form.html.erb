<%= form_for @post do |f| %>
  <% if @post %>
    <% if @post.errors.any? %>
      <div class="container-errors">
        <h2>
          <%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:
        </h2>
        <ul class="list-errors">
          <% @post.errors.full_messages.each do |msg| %>
            <li class="list-item-error"> <%= msg %> </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
